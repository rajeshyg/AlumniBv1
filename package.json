{
  "name": "mobile-first-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "server": "node server.js",
    "chat-server": "cd chat-server && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\" \"npm run chat-server\" --kill-others",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest watch",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:summary": "vitest run --reporter=verbose",
    "test:failed": "vitest run --reporter=failing",
    "test:brief": "vitest run --reporter=basic",
    "test:compact": "vitest run --reporter=junit",
    "test:only-failures": "vitest run --reporter=basic --mode=skip-pass"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@supabase/supabase-js": "^2.49.4",
    "@tanstack/react-query": "^5.24.1",
    "@tanstack/react-virtual": "^3.13.6",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.6.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "express": "^4.21.2",
    "framer-motion": "^11.0.8",
    "fs-extra": "^11.3.0",
    "immer": "^10.0.3",
    "lucide-react": "^0.344.0",
    "quill-image-resize-module-react": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-quill": "^2.0.0",
    "react-router-dom": "^6.22.2",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^2.6.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "17.4.4",
    "jsdom": "^26.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.5.0"
  }
}
